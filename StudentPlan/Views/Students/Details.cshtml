@model StudentPlan.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Family)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Family)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Given)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Given)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Snumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Snumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number919)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number919)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>DegreePlanId</th>
                    <th>DegreeId </th>
                    <th>StudentId</th>
                    <th> DegreePlanAbbrev </th>
                    <th>DegreePlanName</th>
                    <th> Done </th>
                    <th>StudentTerms</th>
                </tr>
                @foreach (var item in Model.DegreePlans.OrderBy(p => p.DegreePlanId))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreePlanId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreePlanAbbrev)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreePlanName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Done)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="DegreePlans" asp-route-id="@item.DegreePlanId">Plan</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId">Edit</a> |
